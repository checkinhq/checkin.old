{% extends "base.html.twig" %}

{% block title %}CheckIn{% endblock %}


{% block page %}
<div class="section no-pad-bot">
    <div class="container">
        <div class="row center">
            <form class="col s12" action="">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="yesterday">What did you do yesterday?</label>
                        <textarea id="yesterday" class="materialize-textarea"></textarea>
                    </div>
                </div>
                <div class="row">
                    <p>
                        <input type="checkbox" class="filled-in" id="goals" />
                        <label for="goals">Did you accomplish yesterday's goals?</label>
                    </p>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="today">What are you going to do today?</label>
                        <textarea id="today" class="materialize-textarea"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="blockers">Are there any blockers in your way?</label>
                        <textarea id="blockers" class="materialize-textarea"></textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
